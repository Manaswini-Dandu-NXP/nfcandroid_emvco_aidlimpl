cc_library_shared {
    name: "emvco_poller",
    proprietary: true,
    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-Wno-implicit-fallthrough",
        "-DNXP_EXTNS=TRUE",
    ],

    srcs: [
        "api/emvco_hal.c",
        "dm/emvco_dm.c",
        "emvco/cl/emvco_cl.c",
        "emvco/ct/emvco_ct.c",
        "log/emvco_log.c",
        "nci/emvco_nci_ext.c",
        "nci/emvco_ncif.c",
        "osal/osal_memory.c",
        "osal/osal_message_queue_lib.c",
        "osal/osal_thread.c",
        "osal/osal_timer.c",
        "osal/osal_tml.c",
        "peripherals/peripherals.c",
        "tml/emvco_tml.c",
        "tml/emvco_tml_i2c.c",
        "utils/emvco_config.c",
        "utils/emvco_util.c",
        "utils/sparse_crc32.c",
    ],

    local_include_dirs: [
        "api",
        "dm",
        "emvco/ct",
        "emvco/cl",
        "inc/common",
        "log",
        "nci",
        "osal",
        "peripherals",
        "tml",
        "utils",
    ],

    shared_libs: [
        "liblog",
        "libcutils",
    ],
}
